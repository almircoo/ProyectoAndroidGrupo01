<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.LibraryBlue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Button.Registro" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/bg_dark</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/surface_dark</item>
        <item name="android:textColor">@color/text_gray_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border_color</item>
    </style>

    <style name="TextView.ScreenTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextView.SectionTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="TextView.BookTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextView.BookSubtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TextView.InputLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Input" parent="Widget.AppCompat.EditText">
    </style>

    <style name="Input.LibraryDark">
        <item name="android:background">@color/surface_dark</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/text_muted</item>
    </style>

    <style name="TextView.StatusAvailable" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green_available</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.StatusUnavailable" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Rating" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange_accent</item>
    </style>
</resources>