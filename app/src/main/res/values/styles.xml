<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para Botones Principales -->
    <style name="Button.LibraryBlue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Títulos de Pantalla -->
    <style name="TextView.ScreenTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Títulos de Secciones (Inicio) -->
    <style name="TextView.SectionTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Labels de Inputs (Login) -->
    <style name="TextView.InputLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Estilo para los Inputs (Simulado con fondo personalizado) -->
    <style name="Input" parent="Widget.AppCompat.EditText">

    </style>

    <style name="Input.LibraryDark">
        <item name="android:background">@color/surface_dark</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>