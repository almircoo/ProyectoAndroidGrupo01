<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Portada del libro -->
        <ImageView
            android:id="@+id/imgPortada"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:src="@drawable/img_cien_anos"
            android:scaleType="centerCrop"
             />

        <!-- Información del libro -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtTitulo"
                style="@style/TextView.BookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1984"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtAutor"
                style="@style/TextView.BookSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="George Orwell"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtFechaVencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vence: 25 may 2024"
                android:textColor="@color/orange_accent"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Botón Renovar -->
        <Button
            android:id="@+id/btnRenovar"
            style="@style/Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Renovar"
            android:paddingHorizontal="12dp"
            android:textSize="11sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>