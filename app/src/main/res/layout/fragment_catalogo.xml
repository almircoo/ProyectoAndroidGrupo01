<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogoActivity"
    android:background="@color/bg_dark">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/surface_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@color/text_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            style="@style/TextView.ScreenTitle"
            android:text="Catálogo de libros"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/text_white"/>
    </LinearLayout>

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/searchBar"
        style="@style/Input.LibraryDark"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Buscar libros..."
        android:drawablePadding="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Categorías -->
    <HorizontalScrollView
        android:id="@+id/categoriesScroll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scrollbars="none"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/categoriesContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:spacing="8dp">

            <Button
                style="@style/Button.LibraryBlue"
                android:id="@+id/catToda"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Toda"
                android:paddingHorizontal="16dp"
                android:textSize="12sp" />

            <Button
                style="@style/Button.Secondary"
                android:id="@+id/catDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Disponibles"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp" />

            <Button
                style="@style/Button.Secondary"
                android:id="@+id/catNuevos"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Nuevos"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp" />

            <Button
                style="@style/Button.Secondary"
                android:id="@+id/catPopulares"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Populares"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView de libros -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCatalogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/categoriesScroll"
        app:layout_constraintBottom_toTopOf="@id/customBottomNav"/>

    <LinearLayout
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- BOTÓN INICIO -->
        <LinearLayout
            android:id="@+id/inicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#3D82F6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#3D82F6"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- BOTÓN CATÁLOGO -->
        <LinearLayout
            android:id="@+id/catalogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_catalog"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catálogo"
                android:textColor="#AAAAAA"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- BOTÓN PRESTAMO -->
        <LinearLayout
            android:id="@+id/prestamo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_loan"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Préstamo"
                android:textColor="#AAAAAA"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- BOTÓN USER -->
        <LinearLayout
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#AAAAAA"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>