<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleActivity"
    android:background="@color/bg_dark">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/surface_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@color/text_white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            style="@style/TextView.ScreenTitle"
            android:text="Detalle del libro"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/text_white"/>
    </LinearLayout>

    <!-- ScrollView para contenido scrolleable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnPrestar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Imagen del libro -->
            <ImageView
                android:id="@+id/imgPortada"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:src="@drawable/img_cien_anos"/>

            <!-- Título y autor -->
            <TextView
                style="@style/TextView.ScreenTitle"
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cien años de soledad"
                android:layout_marginBottom="8dp" />

            <TextView
                style="@style/TextView.BookSubtitle"
                android:id="@+id/txtAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gabriel García Márquez"
                android:layout_marginBottom="16dp" />

            <!-- Rating y información -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    style="@style/TextView.Rating"
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★★ 4.6 (330 reseñas)" />
            </LinearLayout>

            <!-- Año y otros detalles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Año"
                        style="@style/TextView.InputLabel"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txtAnio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1987"
                        style="@style/TextView.BookTitle"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        style="@style/TextView.InputLabel"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txtTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novela"
                        style="@style/TextView.BookTitle"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disponible"
                        style="@style/TextView.InputLabel"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/txtDisponible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí"
                        style="@style/TextView.StatusAvailable"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                style="@style/TextView.SectionTitle"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saldeda comta suin:roundtaon operatca altreda, simplote, u aucucesemos dispreñas empesio. Insolem, aror suserittoa y messs calfraco-muengthu guiposts adate..."
                android:textColor="@color/text_gray"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón Prestar Libro -->
    <Button
        style="@style/Button.LibraryBlue"
        android:id="@+id/btnPrestar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Solicitar Prestamo"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/customBottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1E1E1E"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- BOTÓN INICIO -->
        <LinearLayout
            android:id="@+id/inicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#3D82F6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#3D82F6"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- BOTÓN CATÁLOGO -->
        <LinearLayout
            android:id="@+id/catalogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_catalog"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catálogo"
                android:textColor="#AAAAAA"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- BOTÓN PRESTAMO -->
        <LinearLayout
            android:id="@+id/prestamo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_loan"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Préstamo"
                android:textColor="#AAAAAA"
                android:textSize="11sp"/>
        </LinearLayout>

        <!-- BOTÓN USER -->
        <LinearLayout
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#AAAAAA"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>